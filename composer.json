{
  "name": "effulgentsia/drupal-paketo-scaffold",
  "description": "Adds scaffold files for installing Drupal with the Paketo Buildpack for PHP.",
  "license": "GPL-2.0-or-later",
  "require": {
    "drupal/core-composer-scaffold": "^9 || ^10"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    },
    "drupal-scaffold": {
      "file-mapping": {
        "project.toml": {"overwrite": false, "path": "scaffold/project.toml"},
        ".php.ini.d/drupal-paketo-scaffold.ini": "scaffold/.php.ini.d/drupal-paketo-scaffold.ini",
        ".drupal/drupal-paketo-scaffold.settings.php": "scaffold/.drupal/drupal-paketo-scaffold.settings.php",
        "[web-root]/sites/default/settings.php": {"overwrite": false, "path": "scaffold/web/sites/default/settings.php"}
      }
    }
  }
}
